<%= render 'shared/breadcrumb', category: @post.category %>


<article class="post">
    <section class="post-head">
        <h1><%= @post.title%></h1>
        <small>
            <time><%= @post.created_at.strftime("%d %B, %Y") %></time>
        <% if user_signed_in?%>
            <% if @post.category.present? %>
            |
            <%= link_to @post.category.name, @post.category %>
            <% end %>
            |
            <%= link_to "Change", edit_admin_post_path(@post) %>
            |
            <%= link_to "Delete", admin_post_path(@post), method: :delete, data: {confirm: "Ви впевнені?"} %>
        </small>
        <% end %>
    </section>

    <section class="post-body">
        <%= image_tag @post.image.url(:large), class: 'img-show' if @post.image? %>
        <%= @post.body %>
    </section>

</article>

<%= render 'disqus' %>